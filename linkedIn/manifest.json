{
  "manifest_version": 2,
  "name": "LinkedIn Job Promoted Removal",
  "version": "1.0",

  "description": "Removes the promoted jobs from a LinkedIn Job search.",
  "permissions": [
    "clipboardWrite",
    "contextMenus",
    "tabs",
    "activeTab"
  ],

  "icons": {
    "48": "icon.png"
  },

  "background": {
    "scripts": [
      "details.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["main.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "borderify@example.com"
    }
  }
}
