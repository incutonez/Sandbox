{
  "compilerOptions": {
    // Taken from https://stackoverflow.com/a/67371788/1253609
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": [
      "ES2020"
    ],
    "paths": {
      "@shared/*": [
        "../node_modules/@jef/shared/dist/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}