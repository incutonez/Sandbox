{
  "extends": "plugin:vue/vue3-recommended",
  "rules": {
    "vue/html-closing-bracket-newline": [
      "error",
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "vue/max-attributes-per-line": [
      "error",
      {
        "multiline": {
          "max": 1,
          "allowFirstLine": true
        }
      }
    ]
  }
}