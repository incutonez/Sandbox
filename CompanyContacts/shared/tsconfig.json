{
  "compilerOptions": {
    // Taken from https://stackoverflow.com/a/67371788/1253609
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}